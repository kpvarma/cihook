
<%# Renders a partial which is used to create a new project %>
<%= form_for(@project, :html => {:id=>"form_project", :class=>"margin-bottom-0", :method => (@project.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <%= @project.errors[:base].to_sentence %>
  
  <%= hidden_field_tag :faction, @project.new_record? ? projects_path : project_path(@project) %>
  <%= hidden_field_tag :fmethod, @project.new_record? ? "POST" : "PUT" %>

  <div class="form-inputs">
    

    <!-- Name (string) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'name', 
                                            :display_name=>'Name', 
                                            :field_type=>'string', 
                                            :input_type=>'text', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>

    <!-- Description (text) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'description', 
                                            :display_name=>'Description', 
                                            :field_type=>'text', 
                                            :input_type=>'textarea', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>

    <!-- Status (string) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'status', 
                                            :display_name=>'Status', 
                                            :field_type=>'string', 
                                            :input_type=>'text', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>

    <!-- Qa Url (string) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'qa_url', 
                                            :display_name=>'Qa Url', 
                                            :field_type=>'string', 
                                            :input_type=>'url', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>

    <!-- Uat Url (string) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'uat_url', 
                                            :display_name=>'Uat Url', 
                                            :field_type=>'string', 
                                            :input_type=>'url', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>

    <!-- Repo Url (string) -->
    <%= render :partial=>"field", :locals=>{:object=>@project, 
                                            :object_name=>'project', 
                                            :field_name=>'repo_url', 
                                            :display_name=>'Repo Url', 
                                            :field_type=>'string', 
                                            :input_type=>'url', 
                                            :required=>true, 
                                            :place_holder=>"e.g: Put a suitable example here."} %>
    
  </div>
  
	<div class="cl-10"></div>
	
	<% button_text = "#{@project.new_record? ? "Create" : "Update"} Item" %>
   <div class="pull-right">
   
			<% if @project.new_record? %>
        <%= content_tag :div, :class=>"pretty medium default btn icon-left icon-cancel" do %>
				  <%= link_to "Cancel", "#", :remote=>true %>
        <% end %>
			<% else %>
        <%= content_tag :div, :class=>"pretty medium default btn icon-left icon-back" do %>
				  <%= link_to 'Back', projects_path, :remote => true unless @project.new_record? %>
			  <% end %>
			<% end %>
      
      <%= content_tag :div, :class=>"pretty medium primary btn icon-left icon-plus-squared margin-left-10" do %>
        <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ..." %>
      <% end %>
      
   </div>
	<div class="cl-10"></div>
		
<% end %>

