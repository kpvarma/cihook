<%# describes about each project %>
<div class="box hoverable padding-10 box-border-black">
	
  <div class="pull-left">
    <%= link_to project.name, project_path(project), :remote=>true, :class=>"text-color-blue font-size-16" %></br>
	</div>
  <div class="pull-right text-color-red font-size-12">
    <%= display_time(project.created_at) %>
  </div>
  
  <div class="cl"></div>
  
	<div class="padding-5">
	  <%= scrap_word(project.description, 200) %>
	</div>
  
  <div class="cl"></div>
  
</div>